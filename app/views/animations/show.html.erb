<div class="<%= controller_name %>">
  <% if @current_user.present? %>
  <div >
  <h2><%= @animation.name %> </h2>
  <p id="description"><%= @animation.description %> </p>
    <%= image_tag(@animation.image,:class =>'animation_thumbnail') %>
  </div>

  <div class="artist">Artist: <%= link_to @animation.artist.name, artist_path(@animation.artist) %></div>


  <%= button_to "Back", root_path, :method => :get %>

  <% else %>
  <div>
    <h1>Welcome to MangaStore</h1>

  </div>
  <% end %>
</div>
