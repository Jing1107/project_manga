<%= form_for @user do |f| %>
  <h1>Sign Up </h1>
  <% if flash[:error] %>
    <div>
      <%= flash[:error]%>
    </div>
  <% end %>
  <div id="inner-signup">
    <%= f.label :email %>
    <%= f.email_field :email%>
  <br />


    <%= f.label :password %>
    <%= f.password_field :password %>
  <br />


    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation  %>
  <br />


  <%= f.submit "Sign up!", :class => "submit-btn" %>
  </div>
<% end %>
