<%= form_for @user do |f| %>
  <h1>Sign Up</h1>
  <% if flash[:error] %>
    <div>
      <%= flash[:error]%>
    </div>
  <% end %>
  <div >
    <%= f.label :email %>
    <%= f.email_field :email%>
  </div>

  <div >
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div >
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation  %>
  </div>

  <%= f.submit "Sign up!" %>
<% end %>
